<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".after_register">

    <RelativeLayout
        android:id="@+id/lay1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/reason_Act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="Describe about this activity."
            android:textSize="20dp" />

        <EditText
            android:id="@+id/r_Act"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reason_Act"
            android:ems="10"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/place_Act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The place want to hold on"
            android:layout_below="@+id/r_Act"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:id="@+id/p_Act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:layout_below="@+id/place_Act"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/time_Act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/p_Act"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="The time want to hold on (yyyy/mm/dd)"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/t_Act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_Act"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/title_Act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The title you wnt to be named"
            android:layout_below="@+id/t_Act"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>
        <EditText
            android:id="@+id/ti_Act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_Act"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"/>

        <Button
            android:id="@+id/send_Act"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/ti_Act"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="submit"
            android:textColor="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_Act"
            android:id="@+id/re"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text=""/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="100dp"
        android:id="@+id/down"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-25dp"
        android:background="@drawable/color">
        <TextView
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="100dp"/>

        <Button
            android:id="@+id/btn_help2"

            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_toLeftOf="@+id/btn_home2"
            android:layout_toRightOf="@+id/zero"
            android:background="@drawable/btn"
            android:text="help"
            android:textColor="#438b70"
            android:textSize="30dp"
            app:backgroundTint="@null" />



        <Button
            android:id="@+id/btn_home2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn"
            android:text="home"
            android:textColor="#438b70"
            android:textSize="30dp"
            app:backgroundTint="@null" />
        <TextView
            android:id="@+id/zero2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:layout_alignParentRight="true"
            android:textSize="100dp"
            />

        <Button
            android:id="@+id/btn_history2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/zero2"
            android:layout_toRightOf="@+id/btn_home2"
            android:background="@drawable/btn"
            android:text="diary"
            android:textColor="#438b70"
            android:textSize="30dp"
            app:backgroundTint="@null" />


    </RelativeLayout>
</RelativeLayout>